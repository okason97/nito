
<h1>Test Courses</h1>

<table id="enrolls-table" class="display responsive no-wrap" cellspacing="0" width="100%">
  <thead>
    <tr>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @test_courses.each do |test_course| %>
      <tr>
        <td><%= link_to 'Show', test_course %><%= fa_icon "pencil" , class: "table-icon"%></td>
        <td><%= link_to 'Edit', edit_test_course_path(test_course) %><%= fa_icon "pencil" , class: "table-icon"%></td>
        <td><%= link_to 'Destroy', test_course, method: :delete, data: { confirm: 'Are you sure?' } %><%= fa_icon "trash" , class: "table-icon"%></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Test Course', new_test_course_path , class: "btn"%>
