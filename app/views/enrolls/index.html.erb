<p id="notice"><%= notice %></p>

<h1>Enrolls</h1>

<table id="enrolls-table" class="display responsive no-wrap" cellspacing="0" width="100%">
  <thead>
    <tr>
      <th>Full Name</th>
      <th>DNI</th>
      <th>Legajo</th>
      <th>Enrolled</th>
    </tr>
  </thead>

  <tbody>
    <% @students.each do |student| %>
      <tr>
        <td><%= student.first_name + ' ' + student.last_name %></td>
        <td><%= student.dni %></td>
        <td><%= student.legajo %></td>
        <% if student.respond_to?(:enroll_id) %>
          <td><%= link_to 'Disenroll', delete_course_enroll_path(@course, student.enroll_id), data: { confirm: 'Are you sure?' } %></td>
        <% else %>
          <td>
            <%= form_tag("/courses/#{@course}/enrolls", method: "post") do %>
              <%= hidden_field_tag(:student_id, student.id) %>
              <%= submit_tag("Enroll") %>
            <% end %>
          </td>
        <% end %>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'Back', @course %>