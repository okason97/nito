<p id="notice"><%= notice %></p>

<table>
  <thead>
    <tr>
      <th>Students</th>
      <% @tests.each do |test| %>
        <th><%= test.title %></th>
      <% end %>
    </tr>
  </thead>

  <tbody>
    <% @tests.each do |test| %>
      <tr>
        <td><%= test.title %></td>
        <td><%= test.min_score %></td>
        <td><%= test.max_score %></td>
        <td><%= link_to 'Edit', edit_course_test_path(@course, test) %></td>
        <td><%= link_to 'Destroy', [@course, test], method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>


