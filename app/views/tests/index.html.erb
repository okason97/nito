<p id="notice"><%= notice %></p>

<h1>Tests</h1>

<table>
  <thead>
    <tr>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @tests.each do |test| %>
      <tr>
        <td><%= test.title %></td>
        <td><%= test.date.strftime("%d/%m/%Y") %></td>
        <td><%= test.min_score %></td>
        <td><%= test.max_score %></td>
        <td><%= link_to 'Scores', course_test_scores_path(@course, test) %></td>
        <td><%= link_to 'Edit', edit_course_test_path(@course, test) %></td>
        <td><%= link_to 'Destroy', [@course, test], method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Test', new_course_test_path(@course) %>
<%= link_to 'Back', courses_path %>